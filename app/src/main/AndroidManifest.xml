<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technohub.melifeapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/smalllogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/smalllogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".views.NetworkNotifyActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".views.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".classes.MyService" />

        <activity android:name=".views.ResetPasswordActivity"   android:screenOrientation="portrait" />
        <activity android:name=".views.ForgotPasswordActivity"   android:screenOrientation="portrait"/>
        <activity
            android:name=".views.DashBoardActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.ChoosePageActivity" android:screenOrientation="portrait" />
        <activity android:name=".views.LoginActivity"   android:screenOrientation="portrait"/>
        <activity android:name=".views.SignUpActivity"   android:screenOrientation="portrait"/>
        <activity android:name=".views.MainActivity"   android:screenOrientation="portrait"></activity>
    </application>

</manifest>