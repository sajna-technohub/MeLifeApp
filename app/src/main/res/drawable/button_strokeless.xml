<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item>
        <shape>
            <solid android:color="@color/shadowblack" />
            <corners  android:bottomLeftRadius="131dip"

                android:topLeftRadius="131dip"
                />
        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="5dp"  android:left="3dp" android:top="2dp" >
        <shape
            android:shape="rectangle">
            <solid   android:color="@color/hardwhite"/>
            <corners    android:bottomLeftRadius="131dip"

                android:topLeftRadius="131dip"

                />
                <gradient
                    android:endColor="@color/btn_green"
                    android:startColor="@color/btn_blue"
                    android:type="linear"
                    android:angle="270"/>

        </shape>
    </item>
</layer-list>