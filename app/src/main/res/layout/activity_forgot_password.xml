<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context=".views.ForgotPasswordActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_120"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/signuplogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_80"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="@dimen/margin_300"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
        android:text="@string/Title_Email"
        android:layout_height="@dimen/margin_60"/>
    <EditText
        android:id="@+id/registerEditTxtName"
        android:background="@drawable/edittext_background"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_80"
        android:gravity="center"
        android:textColorHint="@color/whiteLogocolor"
        android:layout_height="@dimen/margin_60"
        android:hint="@string/Title_Email"
        android:textColor="@color/lightblue" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/margin_60"
            android:orientation="horizontal">
            <Button
                android:layout_width="@dimen/margin_150"
                android:layout_height="wrap_content"
                android:id="@+id/registerBtnRegister"
                android:background="@drawable/buttonshapewhitebg"
                android:fontFamily="@font/calibri"
                android:text="@string/Title_forgot"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/fab_margin" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>